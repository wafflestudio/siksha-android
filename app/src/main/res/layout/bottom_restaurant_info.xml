<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    >

    <TextView
        android:id="@+id/text_restaurant_name"
        style="@style/TextRestaurantName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/button_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/gradient_primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_restaurant_name"
        />

    <TextView
        android:id="@+id/label_restaurant_location"
        style="@style/TextRestaurantLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        android:text="@string/restaurant_location"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view"
        />

    <TextView
        android:id="@+id/text_restaurant_location"
        style="@style/TextRestaurantInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="11dp"
        app:layout_constraintBottom_toBottomOf="@+id/label_restaurant_location"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/label_restaurant_location"
        app:layout_constraintTop_toTopOf="@+id/label_restaurant_location"
        />

    <ImageView
        android:id="@+id/button_kakao_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:src="@drawable/map_kakao"
        app:layout_constraintStart_toStartOf="@+id/text_restaurant_location"
        app:layout_constraintTop_toBottomOf="@+id/text_restaurant_location"
        />

    <ImageView
        android:id="@+id/button_naver_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:src="@drawable/map_naver"
        app:layout_constraintStart_toEndOf="@+id/button_kakao_map"
        app:layout_constraintTop_toTopOf="@+id/button_kakao_map"
        />

    <ImageView
        android:id="@+id/button_google_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:src="@drawable/map_google"
        app:layout_constraintStart_toEndOf="@+id/button_naver_map"
        app:layout_constraintTop_toTopOf="@+id/button_naver_map"
        />

    <TextView
        android:id="@+id/label_restaurant_operating_hours"
        style="@style/TextRestaurantLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="14dp"
        android:text="@string/restaurant_operating_hours"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_kakao_map"
        />

    <TextView
        android:id="@+id/text_restaurant_breakfast_operating_hours"
        style="@style/TextRestaurantInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/text_restaurant_location"
        app:layout_constraintTop_toTopOf="@+id/label_restaurant_operating_hours"
        />

    <TextView
        android:id="@+id/text_restaurant_lunch_operating_hours"
        style="@style/TextRestaurantInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/text_restaurant_location"
        app:layout_constraintTop_toBottomOf="@+id/text_restaurant_breakfast_operating_hours"
        />

    <TextView
        android:id="@+id/text_restaurant_dinner_operating_hours"
        style="@style/TextRestaurantInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/text_restaurant_location"
        app:layout_constraintTop_toBottomOf="@+id/text_restaurant_lunch_operating_hours"
        />

    <TextView
        android:id="@+id/text_map_caution"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:textSize="10sp"
        android:text="*먼저 해당 지도앱을 설치하고 지도 기능을 이용해 주시기 바랍니다"
        app:layout_constraintBottom_toBottomOf="@+id/button_google_map"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_google_map"
        app:layout_constraintTop_toTopOf="@+id/button_google_map" />
</androidx.constraintlayout.widget.ConstraintLayout>